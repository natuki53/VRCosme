<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══ ライトテーマの色定義 ═══ -->
    <Color x:Key="WindowBackgroundColor">#FFFFFF</Color>
    <Color x:Key="WindowForegroundColor">#1A1A1A</Color>
    <Color x:Key="PanelBackgroundColor">#F5F5F5</Color>
    <Color x:Key="PanelBorderColor">#E0E0E0</Color>
    <Color x:Key="StatusBarBackgroundColor">#F9F9F9</Color>
    <Color x:Key="StatusBarBorderColor">#E5E5E5</Color>
    <Color x:Key="MenuBackgroundColor">#F5F5F5</Color>
    <Color x:Key="MenuBarBackgroundColor">#F5F5F5</Color>
    <Color x:Key="MenuPopupBackgroundColor">#FFFFFF</Color>
    <Color x:Key="MenuPopupBorderColor">#D0D0D0</Color>
    <Color x:Key="ControlBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ControlBorderColor">#D0D0D0</Color>
    <Color x:Key="ComboBoxBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ComboBoxBorderColor">#D0D0D0</Color>
    <Color x:Key="ComboBoxDropdownBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ComboBoxDropdownBorderColor">#C0C0C0</Color>
    <Color x:Key="ComboBoxItemSelectedBackgroundColor">#E8E8E8</Color>
    <Color x:Key="ButtonBackgroundColor">#F0F0F0</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#E0E0E0</Color>
    <Color x:Key="ButtonPressedBackgroundColor">#D0D0D0</Color>
    <Color x:Key="ButtonDisabledBackgroundColor">#F5F5F5</Color>
    <Color x:Key="ButtonForegroundColor">#1A1A1A</Color>
    <Color x:Key="ButtonDisabledForegroundColor">#A0A0A0</Color>
    <Color x:Key="AccentColor">#3B82F6</Color>
    <Color x:Key="AccentHoverColor">#2563EB</Color>
    <Color x:Key="LabelForegroundColor">#606060</Color>
    <Color x:Key="ValueLabelForegroundColor">#404040</Color>
    <Color x:Key="SeparatorColor">#E0E0E0</Color>
    <Color x:Key="SliderTrackActiveColor">#3B82F6</Color>
    <Color x:Key="SliderTrackInactiveColor">#E0E0E0</Color>
    <Color x:Key="SliderThumbColor">#808080</Color>
    <Color x:Key="SliderThumbHoverColor">#606060</Color>
    <Color x:Key="ExpanderForegroundColor">#1A1A1A</Color>
    <Color x:Key="ExpanderHeaderForegroundColor">#2A2A2A</Color>
    <Color x:Key="ExpanderArrowColor">#808080</Color>
    <Color x:Key="ExpanderArrowHoverColor">#3B82F6</Color>
    <Color x:Key="TextSecondaryColor">#808080</Color>
    <Color x:Key="TextTertiaryColor">#C0C0C0</Color>
    <Color x:Key="PreviewBackgroundColor">#E8E8E8</Color>
    <Color x:Key="PresetButtonBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ToolButtonBackgroundColor">#F0F0F0</Color>
    <Color x:Key="ToggleButtonBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ToggleButtonBorderColor">#D0D0D0</Color>
    <Color x:Key="ToggleButtonHoverBackgroundColor">#F0F0F0</Color>
    <Color x:Key="ResetButtonForegroundColor">#A0A0A0</Color>
    <Color x:Key="ResetButtonHoverForegroundColor">#404040</Color>
    <Color x:Key="ProcessingOverlayBackgroundColor">#80E8E8E8</Color>
    <Color x:Key="ProcessingOverlayForegroundColor">#505050</Color>

    <!-- ═══ SolidColorBrush定義 ═══ -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="{StaticResource WindowForegroundColor}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelBorderBrush" Color="{StaticResource PanelBorderColor}"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{StaticResource StatusBarBackgroundColor}"/>
    <SolidColorBrush x:Key="StatusBarBorderBrush" Color="{StaticResource StatusBarBorderColor}"/>
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="{StaticResource MenuBackgroundColor}"/>
    <SolidColorBrush x:Key="MenuBarBackgroundBrush" Color="{StaticResource MenuBarBackgroundColor}"/>
    <SolidColorBrush x:Key="MenuPopupBackgroundBrush" Color="{StaticResource MenuPopupBackgroundColor}"/>
    <SolidColorBrush x:Key="MenuPopupBorderBrush" Color="{StaticResource MenuPopupBorderColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="{StaticResource ControlBorderColor}"/>
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="{StaticResource ComboBoxBackgroundColor}"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{StaticResource ComboBoxBorderColor}"/>
    <SolidColorBrush x:Key="ComboBoxDropdownBackgroundBrush" Color="{StaticResource ComboBoxDropdownBackgroundColor}"/>
    <SolidColorBrush x:Key="ComboBoxDropdownBorderBrush" Color="{StaticResource ComboBoxDropdownBorderColor}"/>
    <SolidColorBrush x:Key="ComboBoxItemSelectedBackgroundBrush" Color="{StaticResource ComboBoxItemSelectedBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{StaticResource ButtonHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="{StaticResource ButtonPressedBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="{StaticResource ButtonDisabledBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource ButtonForegroundColor}"/>
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="{StaticResource ButtonDisabledForegroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="LabelForegroundBrush" Color="{StaticResource LabelForegroundColor}"/>
    <SolidColorBrush x:Key="ValueLabelForegroundBrush" Color="{StaticResource ValueLabelForegroundColor}"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource SeparatorColor}"/>
    <SolidColorBrush x:Key="SliderTrackActiveBrush" Color="{StaticResource SliderTrackActiveColor}"/>
    <SolidColorBrush x:Key="SliderTrackInactiveBrush" Color="{StaticResource SliderTrackInactiveColor}"/>
    <SolidColorBrush x:Key="SliderThumbBrush" Color="{StaticResource SliderThumbColor}"/>
    <SolidColorBrush x:Key="SliderThumbHoverBrush" Color="{StaticResource SliderThumbHoverColor}"/>
    <SolidColorBrush x:Key="ExpanderForegroundBrush" Color="{StaticResource ExpanderForegroundColor}"/>
    <SolidColorBrush x:Key="ExpanderHeaderForegroundBrush" Color="{StaticResource ExpanderHeaderForegroundColor}"/>
    <SolidColorBrush x:Key="ExpanderArrowBrush" Color="{StaticResource ExpanderArrowColor}"/>
    <SolidColorBrush x:Key="ExpanderArrowHoverBrush" Color="{StaticResource ExpanderArrowHoverColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="PreviewBackgroundBrush" Color="{StaticResource PreviewBackgroundColor}"/>
    <SolidColorBrush x:Key="PresetButtonBackgroundBrush" Color="{StaticResource PresetButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="ToolButtonBackgroundBrush" Color="{StaticResource ToolButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="ToggleButtonBackgroundBrush" Color="{StaticResource ToggleButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="ToggleButtonBorderBrush" Color="{StaticResource ToggleButtonBorderColor}"/>
    <SolidColorBrush x:Key="ToggleButtonHoverBackgroundBrush" Color="{StaticResource ToggleButtonHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="ResetButtonForegroundBrush" Color="{StaticResource ResetButtonForegroundColor}"/>
    <SolidColorBrush x:Key="ResetButtonHoverForegroundBrush" Color="{StaticResource ResetButtonHoverForegroundColor}"/>
    <SolidColorBrush x:Key="ProcessingOverlayBackgroundBrush" Color="{StaticResource ProcessingOverlayBackgroundColor}"/>
    <SolidColorBrush x:Key="ProcessingOverlayForegroundBrush" Color="{StaticResource ProcessingOverlayForegroundColor}"/>

    <!-- ═══ SystemColors 上書き ═══ -->
    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="{StaticResource WindowForegroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="{StaticResource ControlBackgroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="{StaticResource WindowForegroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.MenuBrushKey}" Color="{StaticResource MenuPopupBackgroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrushKey}" Color="{StaticResource WindowForegroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.MenuBarBrushKey}" Color="{StaticResource MenuBarBackgroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.MenuHighlightBrushKey}" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveBorderBrushKey}" Color="{StaticResource ControlBackgroundColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ActiveBorderBrushKey}" Color="{StaticResource AccentColor}"/>

</ResourceDictionary>
