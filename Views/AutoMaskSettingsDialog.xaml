<Window x:Class="VRCosme.Views.AutoMaskSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AutoMaskSettings.Title}"
        Width="860" Height="680"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource PanelBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}"
        FontFamily="Segoe UI, Meiryo UI" FontSize="12">
    <Window.Resources>
        <Style x:Key="Btn" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ButtonPressedBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ButtonDisabledBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ButtonDisabledForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnAccent" TargetType="Button" BasedOn="{StaticResource Btn}">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ModelNameTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModelStatusTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="{DynamicResource AutoMaskSettings.Description}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{DynamicResource AutoMaskSettings.TargetLabel}"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource LabelForegroundBrush}"/>
                    <ComboBox x:Name="TargetComboBox"
                              Grid.Column="1"
                              SelectionChanged="TargetComboBox_SelectionChanged"/>
                </Grid>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{DynamicResource AutoMaskSettings.SelectedModelLabel}"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource LabelForegroundBrush}"/>
                    <TextBlock x:Name="SelectedModelText"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource WindowForegroundBrush}"/>
                </Grid>

                <CheckBox x:Name="MultiPassCheckBox"
                          Content="{DynamicResource AutoMaskSettings.MultiPass}"
                          Margin="0,0,0,10"/>

                <Separator Margin="0,4,0,10" Background="{DynamicResource SeparatorBrush}"/>

                <TextBlock Text="{DynamicResource AutoMaskSettings.ModelManagerTitle}"
                           FontSize="13.5"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>

                <TextBlock Text="{DynamicResource AutoMaskSettings.ModelManagerHint}"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,0,0,8"/>

                <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="6" Padding="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="92"/>
                            <ColumnDefinition Width="92"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="ModelNameHumanText" Style="{StaticResource ModelNameTextStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ModelStatusHumanText" Style="{StaticResource ModelStatusTextStyle}"/>
                        <Button Grid.Row="0" Grid.Column="2" x:Name="DownloadHumanButton" Style="{StaticResource Btn}" Margin="6,2,2,2"
                                Content="{DynamicResource AutoMaskSettings.Download}" Tag="u2net_human_seg" Click="DownloadModel_Click"/>
                        <Button Grid.Row="0" Grid.Column="3" x:Name="DeleteHumanButton" Style="{StaticResource Btn}" Margin="2,2,0,2"
                                Content="{DynamicResource AutoMaskSettings.Delete}" Tag="u2net_human_seg" Click="DeleteModel_Click"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" x:Name="ModelNameObjectText" Style="{StaticResource ModelNameTextStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ModelStatusObjectText" Style="{StaticResource ModelStatusTextStyle}"/>
                        <Button Grid.Row="1" Grid.Column="2" x:Name="DownloadObjectButton" Style="{StaticResource Btn}" Margin="6,2,2,2"
                                Content="{DynamicResource AutoMaskSettings.Download}" Tag="isnet_general_use" Click="DownloadModel_Click"/>
                        <Button Grid.Row="1" Grid.Column="3" x:Name="DeleteObjectButton" Style="{StaticResource Btn}" Margin="2,2,0,2"
                                Content="{DynamicResource AutoMaskSettings.Delete}" Tag="isnet_general_use" Click="DeleteModel_Click"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" x:Name="ModelNameBackgroundText" Style="{StaticResource ModelNameTextStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ModelStatusBackgroundText" Style="{StaticResource ModelStatusTextStyle}"/>
                        <Button Grid.Row="2" Grid.Column="2" x:Name="DownloadBackgroundButton" Style="{StaticResource Btn}" Margin="6,2,2,2"
                                Content="{DynamicResource AutoMaskSettings.Download}" Tag="u2net" Click="DownloadModel_Click"/>
                        <Button Grid.Row="2" Grid.Column="3" x:Name="DeleteBackgroundButton" Style="{StaticResource Btn}" Margin="2,2,0,2"
                                Content="{DynamicResource AutoMaskSettings.Delete}" Tag="u2net" Click="DeleteModel_Click"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" x:Name="ModelNameOtherText" Style="{StaticResource ModelNameTextStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ModelStatusOtherText" Style="{StaticResource ModelStatusTextStyle}"/>
                        <Button Grid.Row="3" Grid.Column="2" x:Name="DownloadOtherButton" Style="{StaticResource Btn}" Margin="6,2,2,2"
                                Content="{DynamicResource AutoMaskSettings.Download}" Tag="isnet_anime" Click="DownloadModel_Click"/>
                        <Button Grid.Row="3" Grid.Column="3" x:Name="DeleteOtherButton" Style="{StaticResource Btn}" Margin="2,2,0,2"
                                Content="{DynamicResource AutoMaskSettings.Delete}" Tag="isnet_anime" Click="DeleteModel_Click"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" x:Name="ModelNameLightweightText" Style="{StaticResource ModelNameTextStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ModelStatusLightweightText" Style="{StaticResource ModelStatusTextStyle}"/>
                        <Button Grid.Row="4" Grid.Column="2" x:Name="DownloadLightweightButton" Style="{StaticResource Btn}" Margin="6,2,2,2"
                                Content="{DynamicResource AutoMaskSettings.Download}" Tag="silueta" Click="DownloadModel_Click"/>
                        <Button Grid.Row="4" Grid.Column="3" x:Name="DeleteLightweightButton" Style="{StaticResource Btn}" Margin="2,2,0,2"
                                Content="{DynamicResource AutoMaskSettings.Delete}" Tag="silueta" Click="DeleteModel_Click"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="{DynamicResource Common.Ok}" Style="{StaticResource BtnAccent}" Width="90" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="{DynamicResource Common.Cancel}" Style="{StaticResource Btn}" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
